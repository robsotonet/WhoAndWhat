# WhoAndWhat Environment Configuration Template
# Copy this file to .env and update with your values

# Database Configuration
POSTGRES_DB=whoandwhat_dev
POSTGRES_USER=whoandwhat_user
POSTGRES_PASSWORD=dev_password_123

# Application Database User (for production)
APP_DB_USER=whoandwhat_app
APP_DB_PASSWORD=app_password_456

# Redis Configuration
REDIS_PASSWORD=

# JWT Configuration (generate secure keys for production)
JWT_SECRET_KEY=your-super-secret-jwt-key-here-minimum-32-characters
JWT_ISSUER=https://whoandwhat.app
JWT_AUDIENCE=https://whoandwhat.app

# API Configuration
API_BASE_URL=http://localhost:5000

# OAuth Providers (obtain from respective providers)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret

# Azure Configuration (for production)
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# External Services
AI_SERVICE_API_KEY=your-ai-service-key
EMAIL_SERVICE_API_KEY=your-email-service-key

# Logging
LOG_LEVEL=Information
SERILOG_MINIMUM_LEVEL=Information

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es